<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--item name="colorPrimaryVariant">@color/colorPrimaryDark</item-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">#000000</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="alertDialogStyle">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">#000000</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">#3700B3</item>
    </style>

    <style name="mdtp_ActionButton.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog"/>
</resources>
